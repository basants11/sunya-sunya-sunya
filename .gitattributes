# ===========================================
# LINE ENDING SETTINGS
# ===========================================

# Ensure consistent line endings for different file types
# Use LF (Linux/Unix) for all files to avoid cross-platform issues

# Text files - use LF line endings
* text=auto eol=lf

# Specific file types - force LF line endings
*.css            text eol=lf
*.scss           text eol=lf
*.sass           text eol=lf
*.less           text eol=lf
*.js             text eol=lf
*.jsx            text eol=lf
*.ts             text eol=lf
*.tsx            text eol=lf
*.json           text eol=lf
*.jsonc          text eol=lf
*.yaml           text eol=lf
*.yml            text eol=lf
*.xml            text eol=lf
*.html           text eol=lf
*.htm            text eol=lf
*.xhtml          text eol=lf
*.svg            text eol=lf
*.graphql        text eol=lf
*.gql            text eol=lf
*.md             text eol=lf
*.mdx            text eol=lf
*.txt            text eol=lf
*.ini            text eol=lf
*.cfg            text eol=lf
*.conf           text eol=lf
*.log            text eol=lf
*.sh             text eol=lf
*.bash           text eol=lf
*.zsh            text eol=lf
*.fish           text eol=lf
*.sql            text eol=lf
*.vue            text eol=lf
*.svelte         text eol=lf

# ===========================================
# BINARY FILES - NO CONVERSION
# ===========================================

# Binary files - do not convert to text
*.png            binary
*.jpg            binary
*.jpeg           binary
*.gif            binary
*.bmp            binary
*.ico            binary
*.webp           binary
*.avif           binary
*.mp3            binary
*.wav            binary
*.ogg            binary
*.mp4            binary
*.webm           binary
*.avi            binary
*.mkv            binary
*.pdf            binary
*.zip            binary
*.tar            binary
*.gz             binary
*.bz2            binary
*.7z             binary
*.rar            binary
*.woff           binary
*.woff2          binary
*.ttf            binary
*.eot            binary
*.otf            binary
*.pdb            binary
*.dll            binary
*.so             binary
*.dylib          binary
*.exe            binary

# ===========================================
# GIT LFS SETTINGS
# ===========================================

# Large file storage - use Git LFS for large files
# Uncomment the following lines to enable Git LFS for specific file types
# *.png filter=lfs diff=lfs merge=lfs -text
# *.jpg filter=lfs diff=lfs merge=lfs -text
# *.jpeg filter=lfs diff=lfs merge=lfs -text
# *.gif filter=lfs diff=lfs merge=lfs -text
# *.psd filter=lfs diff=lfs merge=lfs -text
# *.ai filter=lfs diff=lfs merge=lfs -text
# *.pdf filter=lfs diff=lfs merge=lfs -text
# *.mp3 filter=lfs diff=lfs merge=lfs -text
# *.mp4 filter=lfs diff=lfs merge=lfs -text
# *.wav filter=lfs diff=lfs merge=lfs -text

# ===========================================
# MERGE STRATEGIES
# ===========================================

# Use union merge for package-lock.json to reduce conflicts
package-lock.json merge=union
yarn.lock merge=union
pnpm-lock.yaml merge=union

# Use union merge for yarn.lock to reduce conflicts
yarn.lock merge=union

# ===========================================
# DIFF SETTINGS
# ===========================================

# Custom diff settings for specific file types
*.json   diff=json
*.xml    diff=xml
*.yaml   diff=yaml
*.yml    diff=yaml

# ===========================================
# ATTRIBUTE SETTINGS
# ===========================================

# Prevent automatic newline conversion issues
* text=auto eol=lf

# Handle Windows-specific issues
.gitattributes text=auto eol=lf
.gitignore text=auto eol=lf

# ===========================================
# PERMISSIONS
# ===========================================

# Ensure scripts are executable
*.sh    eol=lf    text=auto
*.bash  eol=lf    text=auto

# ===========================================
# PERFORMANCE
# ===========================================

# Optimize repository for specific file types
*.min.js -delta
*.min.css -delta
*.map -delta
